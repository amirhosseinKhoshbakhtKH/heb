@model IEnumerable<PlexIn.Models.Category>

<h1>مدیریت دسته‌بندی‌ها</h1>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (Model == null || !Model.Any())
{
    <p>دسته‌بندی برای نمایش وجود ندارد.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>نام دسته‌بندی</th>
                <th>بیزینس</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.Business?.Username</td>
                    <td>
                        <form method="post" asp-action="Delete" asp-route-id="@category.Id">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> حذف
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<a asp-action="Create" asp-controller="Categories" style="display: inline-block; padding: 10px 15px; background-color: blue; color: white; text-decoration: none; border-radius: 5px;">ساخت دسته‌بندی جدید</a>
