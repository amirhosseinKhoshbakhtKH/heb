<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
</head>
<body>
    <header>
        @if (User.Identity.IsAuthenticated)
        {
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#">Admin Panel</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="/Admin/Star">Star</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Admin/Comments">نظرات</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Products">محصولات</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Admin/Finance">مالی</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Admin/Statistics">آمار</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-danger" href="/Account/Logout">خروج</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        }
        else
        {
            <script>
                window.location.href = '/Account/Login';
            </script>
        }
    </header>

    <main class="container mt-4">
        @RenderBody()
    </main>

    <footer class="text-center mt-4">
        <p>&copy; 2024 - YourAppName</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
